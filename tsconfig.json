{
  "compilerOptions": {
    "incremental": true,
    "target": "es2015",
    "lib": ["es2017"],
    "module": "commonjs",
    "outDir": "build",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,   
    "skipLibCheck": true,
    "importHelpers": true
  },
  "exclude": [
    "src/__test__/*"
  ]
}
